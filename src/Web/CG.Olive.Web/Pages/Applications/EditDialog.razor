<EditForm Model="@Model" OnValidSubmit="OnValidSubmit">
    <MudDialog>
        <TitleContent>
            <div class="d-flex">
                <MudIcon Size="Size.Small" 
                         Icon="@Icons.Material.Filled.Edit" 
                         class="mr-3"></MudIcon>
                <MudText>
                    @Caption
                </MudText>
            </div>
        </TitleContent>
        <DialogContent>
            <DataAnnotationsValidator />
            <MudSwitch @bind-Checked="@Model.IsLocked" 
                       For="(() => Model.IsLocked)" 
                       Label="Locked"
                       Color="@(Model.IsLocked ? Color.Info : Color.Inherit)">
            </MudSwitch>
            <MudTextField @bind-Value="@Model.Name" 
                          For="(() => Model.Name)" 
                          Label="Name" />
            <MudTextField @bind-Value="@Model.Sid" 
                          For="(() => Model.Sid)" 
                          Label="Sid" />
            <MudTextField @bind-Value="@Model.SKey" 
                          For="(() => Model.SKey)" 
                          Label="SKey" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">
                Cancel
            </MudButton>
            <MudButton Color="Color.Primary" 
                       ButtonType="ButtonType.Submit">
                Save Changes
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
